# syntax=docker/dockerfile:1

FROM nginx:latest

RUN rm -f /etc/nginx/conf.d/*

RUN mkdir /etc/nginx/ssl

# Config
COPY ./gzip.conf /etc/nginx/gzip.conf
COPY ./nginx.conf /etc/nginx/nginx.conf
COPY /etc/letsencrypt/live/meucontato.app.br/fullchain.pem /etc/nginx/ssl/fullchain1.pem
COPY /etc/letsencrypt/live/meucontato.app.br/privkey.pem /etc/nginx/ssl/privkey1.pem

# make all files belong to the nginx user
RUN chown nginx:nginx /usr/share/nginx/html